<h1 id="page_title">Posts</h1>

<div id="posts_wrapper" class="skinny_wrapper wrapper_with_padding">
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= link_to post.title, post %></h2>
      <p class="date_large"><%= "Created #{time_ago_in_words(post.created_at)} ago" %> by <%= link_to post.user.username, user_posts_path(post.user), class: "username" %></p>
      <hr />
    </div>
    <% end %>
  </div>
</div>
